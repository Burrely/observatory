!!!

%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ 'http-equiv' => 'X-UA-Compatible', content: 'IE=edge' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }

    %title Observatory

    =  stylesheet_link_tag 'bootstrap.min'

    = javascript_include_tag 'jquery-3.1.0.min.js'
    = javascript_include_tag 'bootstrap.min'

  %body
    %nav.navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{ type: 'button', 'data-toggle': 'collapse', 'data-target': '#navbar' }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ href: '/' }
            Observatory

        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.dropdown
              %a.dropdown-toggle{ href: '#', 'data-toggle': 'dropdown', role: 'button' }
                Player Query
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Single', url(:player_query, :single)

          %p.navbar-text.navbar-right
            = link_to "Version: #{ Observatory::VERSION }", 'https://bitbucket.org/Lavode/observatory/src/master/CHANGELOG.md'

    .container
      .flash
        - if flash[:error]
          .alert.alert-danger{role: :alert}= flash[:error]

        - if flash[:notice]
          .alert.alert-warning{role: :alert}= flash[:notice]

        - if flash[:info]
          .alert.alert-info{role: :alert}= flash[:info]

        - if flash[:success]
          .alert.alert-success{role: :alert}= flash[:success]

      = yield(:content)
