.page-header
  %h1
    Users

%a{ href: url(:users, :new) }
  %span.glyphicon.glyphicon-plus

%table.table
  %thead
    %tr
      %th User
      %th Last signin
      %th Active

  %tbody
    - @users.each do |user|
      %tr
        %td= link_to "#{ user.user }", url(:users, :show, id: user.id)
        %td= time_ago_in_words(user.last_signin_at)
        %td
          - if user.active
            %span.glyphicon.glyphicon-ok
          - else
            %span.glyphicon.glyphicon-remove
