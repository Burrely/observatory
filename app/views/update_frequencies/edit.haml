.page-header
  %h1
    Edit
    %small= @frequency.name

.row
  .col-md-6
    = form_tag url(:update_frequencies, :delete, id: @frequency.id), method: 'post', class: 'btn' do
      = submit_tag 'Delete', class: 'btn btn-danger'

.row
  .col-md-6
    = partial 'form', locals: { type: :edit, target_url: url(:update_frequencies, :edit, id: @frequency.id), frequency: @frequency }
